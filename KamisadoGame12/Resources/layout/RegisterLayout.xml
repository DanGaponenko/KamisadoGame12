<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#393E46"
    android:gravity="center"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:text="Register"
        android:textSize="100px"
        android:textColor="#EEEEEE"
        android:gravity="center"
        android:textFontWeight="1500"
    />

    <EditText
        android:layout_width="800px"
        android:layout_height="175px"
        android:id="@+id/RegisterPageUsernameEditText"
        android:textSize="70px"
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        android:hint="Username"
        android:paddingLeft="50px"
        android:textFontWeight="1000"
        android:layout_marginTop="20px"
        android:textColorHint="#EEEEEE"
    />
    <EditText
        android:layout_width="800px"
        android:layout_height="175px"
        android:id="@+id/RegisterPageEmailEditText"
        android:textSize="70px"
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        android:hint="Email"
        android:paddingLeft="50px"
        android:textFontWeight="1000"
        android:layout_marginTop="20px"
        android:textColorHint="#EEEEEE"
    />
    <EditText
        android:layout_marginTop="20px"
        android:layout_width="800px"
        android:layout_height="175px"
        android:id="@+id/RegisterPagePasswordEditText"
        android:textSize="70px"
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        android:inputType="textPassword"
        android:hint="Password"
        android:paddingLeft="50px"
        android:textFontWeight="1000"
        android:textColorHint="#EEEEEE"
    />
   
   
    <Button
        android:layout_width="600px"
        android:layout_height="150px"
        android:background="#00ADB5"
        android:layout_marginTop="50px"
        android:text="Register"
        android:shadowColor="@android:color/black"
        android:textSize="64px"
        android:textFontWeight="1500"
        android:id="@+id/RegisterPageSubmitButton"
        android:textColor="#222831"
    />
    <ImageView
        android:layout_width="600px"
        android:layout_height="150px"
    />
</LinearLayout>